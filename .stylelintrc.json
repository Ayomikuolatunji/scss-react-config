{
    "rules": {
        "block-no-empty": null,
        "unit-allowed-list": ["em", "rem", "%", "s"],
        "alpha-value-notation": ["percentage", { "exceptProperties": ["opacity"] }]
      },
    "plugins":["stylelint-prettier"],
    "extends":[
        "stylelint-config-sass-guidelines",
        "stylelint-config-prettier",
        "stylelint-prettier/recommended"
    ]
}